<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--face部分-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.cxz.behaviorsample.behavior.FaceBehavior">

        <ImageView
            android:id="@+id/iv_face"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/jj"
            android:tag="iv_face"
            android:translationY="@dimen/face_trans_y" />

        <View
            android:id="@+id/v_mask"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

    </FrameLayout>
    <!--face部分-->

    <!--TopBar部分-->
    <com.cxz.behaviorsample.weiget.TopBarLayout
        android:id="@+id/cl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        app:layout_behavior="com.cxz.behaviorsample.behavior.TopBarBehavior">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="0dp"
            android:scaleType="center"
            android:src="@mipmap/back"
            app:layout_constraintBottom_toBottomOf="@+id/tv_top_bar_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_top_bar_name" />

        <TextView
            android:id="@+id/tv_top_bar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="林俊杰"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_back" />

        <com.cxz.behaviorsample.weiget.DrawableLeftTextView
            android:id="@+id/tv_top_bar_coll"
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_collect_btn_bg"
            android:drawableStart="@mipmap/add"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="收藏"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_top_bar_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_top_bar_name" />

    </com.cxz.behaviorsample.weiget.TopBarLayout>
    <!--TopBar部分-->

    <!--TitleBar部分-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cls_title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_behavior="com.cxz.behaviorsample.behavior.TitleBarBehavior">

        <TextView
            android:id="@+id/tv_cls_content_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="林俊杰"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.cxz.behaviorsample.weiget.DrawableLeftTextView
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/shape_collect_btn_bg"
            android:drawableStart="@mipmap/add"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="收藏"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_cls_content_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_cls_content_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--TitleBar部分-->

    <!--Content部分-->
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:translationY="@dimen/content_trans_y"
        app:layout_behavior="com.cxz.behaviorsample.behavior.ContentBehavior">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/stl"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/shape_tablayout_bg"
            app:tl_indicator_height="0dp"
            app:tl_tab_space_equal="true"
            app:tl_textBold="BOTH"
            app:tl_textSelectColor="#fc4070"
            app:tl_textUnselectColor="#666"
            app:tl_textsize="14sp"
            app:tl_underline_color="#e5e5e5"
            app:tl_underline_gravity="BOTTOM"
            app:tl_underline_height="0.5dp" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white" />

    </LinearLayout>
    <!--Content部分-->

</androidx.coordinatorlayout.widget.CoordinatorLayout>