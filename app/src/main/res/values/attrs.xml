<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PayPsdInputView">
        <attr name="maxCount" format="integer" />
        <attr name="circleColor" format="color" />
        <attr name="bottomLineColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="divideLineWidth" format="dimension" />
        <attr name="dividerLineColor" format="color" />
        <attr name="rectAngle" format="dimension" />
        <attr name="focusedColor" format="color" />
        <attr name="psdType" format="enum">
            <enum name="rectBox" value="0" />
            <enum name="bottomLine" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WaveBezierView">
        <attr name="waveColorB" format="color" />
        <attr name="waveY" format="dimension" />
        <attr name="waveTypeB" format="enum">
            <enum name="sin" value="0" />
            <enum name="cos" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="WaveSinCosView">
        <attr name="waveColor" format="color" />
        <attr name="waveAmplitude" format="dimension" />
        <attr name="waveSpeed" format="float" />
        <attr name="waveStartPeriod" format="float" />
        <attr name="waveStart" format="boolean" />
        <attr name="waveFillTop" format="boolean" />
        <attr name="waveFillBottom" format="boolean" />
        <attr name="waveFillType" format="enum">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="waveType" format="enum">
            <enum name="sin" value="0" />
            <enum name="cos" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="EmptyLayout">
        <attr name="background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="PswInputView">
        <attr name="border_color" format="color" />
        <attr name="dot_color" format="color" />
        <attr name="count" format="integer" />
    </declare-styleable>

    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color" />
        <attr name="roundProgressColor" format="color" />
        <attr name="roundWidth" format="dimension" />
        <attr name="roundGap" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer" />
        <attr name="textIsDisplayable" format="boolean" />
        <attr name="roundClockWise" format="boolean" />
        <attr name="roundIsPercent" format="boolean" />
        <attr name="style">
            <enum name="STROKE" value="0" />
            <enum name="FILL" value="1" />
        </attr>
    </declare-styleable>

    <!-- loadingView -->
    <declare-styleable name="LoadingLoadView">
        <!--  设置外面进度条的半径 -->
        <attr name="outerCircleRadius" format="dimension|reference" />
        <!--  设置外面进度条的颜色 -->
        <attr name="outerCircleColor" format="color|reference" />
        <!--  设置三角形外接圆的半径 -->
        <attr name="innerTriangleRadius" format="dimension|reference" />
        <!--  设置三角形颜色 -->
        <attr name="innerTriangleColor" format="color|reference" />
        <!--  设置背景的颜色 -->
        <attr name="backgroundColor" format="color|reference" />
        <!--  设置是否需要背景 -->
        <attr name="isNeedBackground" format="boolean" />
        <attr name="strokeWidth" format="dimension|reference" />
    </declare-styleable>

</resources>