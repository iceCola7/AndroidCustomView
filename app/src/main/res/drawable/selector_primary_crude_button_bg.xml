<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FF00B4B8" />
                    <corners android:radius="26dp" />
                    <size android:height="52dp" />
                </shape>
            </item>

            <item android:bottom="25dp" android:gravity="center" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="#FF00888C" />
                    <corners android:topLeftRadius="26dp" android:topRightRadius="26dp" />
                    <size android:height="26dp" />
                </shape>
            </item>

            <item android:gravity="center" android:left="1dp" android:right="1dp" android:top="23dp">
                <shape>
                    <solid android:color="#FF00888C" />
                    <corners android:bottomLeftRadius="24dp" android:bottomRightRadius="24dp" />
                    <size android:height="23dp" />
                </shape>
            </item>

            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#FF0F0028" />
                    <corners android:radius="26dp" />
                    <size android:height="52dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FF00B4B8" />
                    <corners android:radius="26dp" />
                    <size android:height="52dp" />
                </shape>
            </item>

            <item android:bottom="25dp" android:gravity="center" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="#FF14D7DC" />
                    <corners android:topLeftRadius="26dp" android:topRightRadius="26dp" />
                    <size android:height="26dp" />
                </shape>
            </item>

            <item android:gravity="center" android:left="1dp" android:right="1dp" android:top="23dp">
                <shape>
                    <solid android:color="#FF14D7DC" />
                    <corners android:bottomLeftRadius="24dp" android:bottomRightRadius="24dp" />
                    <size android:height="23dp" />
                </shape>
            </item>

            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#FF0F0028" />
                    <corners android:radius="26dp" />
                    <size android:height="52dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>