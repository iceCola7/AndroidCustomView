<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FF00B4B8" />
                    <corners android:radius="22dp" />
                    <size android:height="44dp" />
                </shape>
            </item>

            <item android:bottom="21dp" android:gravity="center" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="#FF00888C" />
                    <corners android:topLeftRadius="22dp" android:topRightRadius="22dp" />
                    <size android:height="22dp" />
                </shape>
            </item>

            <item android:gravity="center" android:left="1dp" android:right="1dp" android:top="19dp">
                <shape>
                    <solid android:color="#FF00888C" />
                    <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" />
                    <size android:height="19dp" />
                </shape>
            </item>

            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#FF0F0028" />
                    <corners android:radius="22dp" />
                    <size android:height="44dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FF00B4B8" />
                    <corners android:radius="22dp" />
                    <size android:height="44dp" />
                </shape>
            </item>

            <item android:bottom="21dp" android:gravity="center" android:left="1dp" android:right="1dp">
                <shape>
                    <solid android:color="#FF14D7DC" />
                    <corners android:topLeftRadius="22dp" android:topRightRadius="22dp" />
                    <size android:height="22dp" />
                </shape>
            </item>

            <item android:gravity="center" android:left="1dp" android:right="1dp" android:top="19dp">
                <shape>
                    <solid android:color="#FF14D7DC" />
                    <corners android:bottomLeftRadius="20dp" android:bottomRightRadius="20dp" />
                    <size android:height="19dp" />
                </shape>
            </item>

            <item>
                <shape>
                    <stroke android:width="1dp" android:color="#FF0F0028" />
                    <corners android:radius="22dp" />
                    <size android:height="44dp" />
                </shape>
            </item>
        </layer-list>
    </item>


</selector>