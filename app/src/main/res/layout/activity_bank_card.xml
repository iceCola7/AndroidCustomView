<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BankCardActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <com.cxz.androidcustomview.widget.BankCardEditText
            android:id="@+id/et_bank_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:hint="输入银行卡号"
            android:maxLength="26"
            android:maxLines="1" />

        <EditText
            android:id="@+id/et_bank_card2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:digits="0123456789"
            android:hint="输入银行卡号"
            android:inputType="number"
            android:maxLength="26"
            android:maxLines="1" />

        <EditText
            android:id="@+id/et_id_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:digits="0123456789abcefghijklmnopqrstuvwxyzABCEFGHIJKLMNOPQRSTUVWXYZ"
            android:hint="输入身份证号"
            android:inputType="number"
            android:maxLength="18"
            android:maxLines="1" />

        <EditText
            android:id="@+id/et_mobile_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:digits="0123456789"
            android:hint="输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:maxLines="1" />

    </LinearLayout>

</LinearLayout>