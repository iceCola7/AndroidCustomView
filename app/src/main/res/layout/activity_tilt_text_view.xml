<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.TiltTextViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#e3e3e3">

            <com.cxz.tilt.textview.TiltTextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tiltBgColor="@color/colorAccent"
                app:tiltLength="22dp"
                app:tiltMode="left_top"
                app:tiltText="Java"
                app:tiltTextSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="#e3e3e3">

            <com.cxz.tilt.textview.TiltTextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:tiltBgColor="@color/colorAccent"
                app:tiltLength="22dp"
                app:tiltMode="left_top_triangle"
                app:tiltText="Android"
                app:tiltTextSize="8sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>